@model BT_TaskManager.Models.BT_Task

@{
    ViewData["Title"] = "Edit Task";
}

<style>
    :root {
        --bg-body: #F0F0DB;
        --bg-card: #E1D9BC;
        --primary-dark: #30364F;
        --accent-grey: #ACBAC4;
        --text-main: #30364F;
    }

    body {
        background-color: var(--bg-body);
        color: var(--text-main);
        font-family: 'Segoe UI', sans-serif;
    }

    .edit-container {
        margin-top: 5vh;
    }

    .card-edit {
        background-color: var(--bg-card);
        border: 1px solid var(--accent-grey);
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(48, 54, 79, 0.08);
        padding: 2.5rem;
    }

    .header-border {
        border-bottom: 2px solid var(--accent-grey);
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--primary-dark);
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .form-control, .form-select {
        border: 1.5px solid var(--accent-grey);
        border-radius: 10px;
        padding: 0.75rem;
        background-color: rgba(255, 255, 255, 0.9);
        transition: all 0.2s ease;
    }

        .form-control:focus, .form-select:focus {
            background-color: #ffffff;
            border-color: var(--primary-dark);
            box-shadow: 0 0 0 0.25rem rgba(48, 54, 79, 0.1);
            outline: none;
        }

    .btn-update {
        background-color: var(--primary-dark);
        color: #ffffff;
        border: none;
        border-radius: 10px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-update:hover {
            background-color: #24283b;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(48, 54, 79, 0.2);
            color: #ffffff;
        }

    .btn-back {
        color: var(--primary-dark);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
    }

        .btn-back:hover {
            text-decoration: underline;
        }
</style>

<div class="container edit-container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card-edit">

                <div class="header-border d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="fw-bold mb-0">Edit Task</h2>
                        <p class="text-muted small mb-0">Modify your task details</p>
                    </div>
                    <span class="badge rounded-pill px-3 py-2" style="background-color: var(--accent-grey); color: var(--primary-dark);">
                        ID: #@Model.TaskId
                    </span>
                </div>

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="TaskId" />

                    <div class="mb-4">
                        <label class="form-label">Task Title</label>
                        <input asp-for="Title" class="form-control" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label">Due Date</label>
                            <input asp-for="DueDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mt-4">
                        <a asp-action="Index" class="btn-back">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-update px-5 shadow-sm">
                            Save Changes
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>