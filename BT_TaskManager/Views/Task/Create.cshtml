@model BT_TaskManager.Models.BT_Task

@{
    ViewData["Title"] = "Create Task";
}

<style>
    :root {
        --bg-body: #F0F0DB;
        --bg-card: #E1D9BC;
        --primary-dark: #30364F;
        --accent-grey: #ACBAC4;
        --text-main: #30364F;
    }

    body {
        background-color: var(--bg-body);
        color: var(--text-main);
        font-family: 'Segoe UI', sans-serif;
    }

    .task-container {
        margin-top: 5vh;
    }

    .card-task {
        background-color: var(--bg-card);
        border: 1px solid var(--accent-grey);
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(48, 54, 79, 0.08);
        padding: 2.5rem;
    }

    .header-border {
        border-bottom: 2px solid var(--accent-grey);
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--primary-dark);
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: 1.5px solid var(--accent-grey);
        border-radius: 10px;
        padding: 0.75rem;
        background-color: rgba(255, 255, 255, 0.9);
        transition: all 0.2s ease;
    }

        .form-control:focus {
            background-color: #ffffff;
            border-color: var(--primary-dark);
            box-shadow: 0 0 0 0.25rem rgba(48, 54, 79, 0.1);
        }

    .btn-save {
        background-color: var(--primary-dark);
        color: #ffffff;
        border: none;
        border-radius: 10px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-save:hover {
            background-color: #24283b;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(48, 54, 79, 0.2);
            color: #ffffff;
        }

    .btn-cancel {
        color: var(--primary-dark);
        text-decoration: none;
        font-weight: 500;
        margin-right: 1.5rem;
    }

        .btn-cancel:hover {
            color: #000;
            text-decoration: underline;
        }
</style>

<div class="container task-container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card-task">
                <div class="header-border">
                    <h2 class="fw-bold mb-0">Create New Task</h2>
                    <p class="text-muted small">Plan your next milestone</p>
                </div>

                <form asp-action="Create" method="post">
                    <div class="mb-4">
                        <label class="form-label">Task Title</label>
                        <input asp-for="Title" class="form-control" placeholder="What needs to be done?" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Add some details..."></textarea>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Due Date</label>
                        <input asp-for="DueDate" type="date" class="form-control" />
                    </div>

                    <div class="d-flex align-items-center justify-content-end mt-5">
                        <a href="javascript:history.back()" class="btn-cancel">Discard</a>
                        <button type="submit" class="btn btn-save px-5">
                            Save Task
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>